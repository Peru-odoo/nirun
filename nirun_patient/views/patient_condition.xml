<odoo>
    <record id="patient_condition_view_tree" model="ir.ui.view">
        <field name="name">patient.condition.view.tree</field>
        <field name="model">ni.patient.condition</field>
        <field name="arch" type="xml">
            <tree string="Patient Condition">
                <field name="condition_category_id" />
                <field name="condition_id" />
                <field name="state" />
                <field name="severity" />
                <field name="period_start" />
                <field name="period_end" />
                <field name="duration_days" />
                <field name="encounter_id" invisible="1" />
            </tree>
        </field>
    </record>
    <record id="patient_condition_view_form" model="ir.ui.view">
        <field name="name">patient.condition.view.form</field>
        <field name="model">ni.patient.condition</field>
        <field name="arch" type="xml">
            <form string="Patient Condition">
                <group>
                    <group>
                        <field name="condition_id" />
                        <field name="condition_category_id" />
                        <field name="severity" />
                        <field name="state" />
                    </group>
                    <group>
                        <field name="patient_id" />
                        <field name="encounter_id" />
                        <field name="category" />
                    </group>
                    <group>
                        <field name="period_start" />
                        <field name="period_end" />
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
