<odoo>
    <record id="patient_category_action" model="ir.actions.act_window">
        <field name="name">Patient Category</field>
        <field name="res_model">ni.patient.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="patient_category_view_form" model="ir.ui.view">
        <field name="name">patient.category.view.form</field>
        <field name="model">ni.patient.category</field>
        <field name="arch" type="xml">
            <form string="Patient Categories">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="color" />
                        <field name="sequence" />
                    </group>
                    <notebook>
                        <page string="Patients">
                            <field name="patient_ids" no_create="True" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="patient_category_view_tree" model="ir.ui.view">
        <field name="name">patient.category.view.tree</field>
        <field name="model">ni.patient.category</field>
        <field name="arch" type="xml">
            <tree string="Patient Categories">
                <field name="sequence" widget="handle" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="patient_category_view_search" model="ir.ui.view">
        <field name="name">patient.category.view.search</field>
        <field name="model">ni.patient.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>
</odoo>
