<odoo>
    <record id="ni_service_view_search" model="ir.ui.view">
        <field name="name">ni.service.view.search</field>
        <field name="model">ni.service</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="employee_ids" />
                <searchpanel>
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="category_id" />
                    <field name="type_id" />
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="ni_service_view_tree" model="ir.ui.view">
        <field name="name">ni.service.view.tree</field>
        <field name="model">ni.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_id" invisible="1" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="calendar_id" invisible="1" />
                <field name="attendance_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>
    <record id="ni_service_view_form" model="ir.ui.view">
        <field name="name">ni.service.view.form</field>
        <field name="model">ni.service</field>
        <field name="arch" type="xml">
            <form>
                <field name="company_id" invisible="1" />
                <sheet>
                    <header>

                    </header>
                    <div class="oe_title mb24">
                        <label for="name" />
                        <h1>
                            <field name="name" placeholder="Service Name..." />
                        </h1>
                        <div class="small text-muted">
                            <field name="category_id" placeholder="Category..." options="{'no_open': True}" />
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="type_id" options="{ 'no_open': True}" />
                            <field name="calendar_id" />
                            <field name="employee_id" widget="many2one_avatar" />
                        </group>
                        <group>
                            <field name="date" />
                            <field name="editable" widget="boolean_toggle" class="ms-4" />
                        </group>
                    </group>
                    <notebook>
                        <page name="calendar" string="Calendar" icon="fa-calendar">
                            <field name="attendance_ids" attrs="{'invisible': [('calendar_id', '=', False)]}">
                                <tree>
                                    <field name="name" optional="hide" />
                                    <field name="dayofweek" />
                                    <field name="day_period" optional="show" />
                                    <field name="hour_from" widget="float_time" />
                                    <field name="hour_to" widget="float_time" optional="show" />
                                </tree>
                            </field>
                            <p class="text-center" attrs="{'invisible': [('calendar_id', '!=', False)]}">
                                Please choose calendar resource for this service
                            </p>
                        </page>
                        <page name="description" string="Description" icon="fa-file-text-o">
                            <field name="description" />
                        </page>
                        <page name="employee" string="Participant" icon="fa-users" badge="employee_count">
                            <field name="employee_count" invisible="1" />
                            <field name="employee_ids">
                                <tree default_order="department_id, name">
                                    <field name="company_id" invisible="1" />
                                    <field name="department_color" widget="color_picker" nolabel="1" />
                                    <field name="company_id" groups="base.group_multi_company" />
                                    <field name="name" />
                                    <field name="job_title" optional="show" />
                                    <field name="department_id" />
                                    <field name="work_phone" optional="show" />
                                    <field name="work_email" optional="hide" />
                                </tree>
                            </field>
                        </page>
                        <page name="extra" string="Extra Info" groups="base.group_no_one">
                            <group>
                                <field name="sequence" />
                                <field name="color" widget="color_picker" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ni_service_action" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ni.service</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">No Service found</p>
        </field>
    </record>
    <record id="ni_service_category_action" model="ir.actions.act_window">
        <field name="name">Service Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ni.service.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">No Service Category Found</p>
        </field>
    </record>
    <record id="ni_service_type_action" model="ir.actions.act_window">
        <field name="name">Service Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ni.service.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">No Service Type Found</p>
        </field>
    </record>
    <menuitem id="service_menu_root" name="Service" sequence="6" web_icon="ni_service,static/description/icon.png" />
    <menuitem
        id="service_menu"
        name="Service"
        parent="service_menu_root"
        action="ni_service.ni_service_action"
        sequence="0"
    />
    <menuitem id="configuration_menu" name="Configuration" parent="service_menu_root" sequence="0" />
    <menuitem id="category_menu" name="Category" parent="configuration_menu" action="ni_service_category_action" />
    <menuitem id="type_menu" name="Type" parent="configuration_menu" action="ni_service_type_action" />
</odoo>
