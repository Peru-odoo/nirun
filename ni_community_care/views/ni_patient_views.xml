<odoo>
    <record id="ni_patient_view_form_inherit" model="ir.ui.view">
        <field name="name">ni.patient.view.form.inherit</field>
        <field name="model">ni.patient</field>
        <field name="inherit_id" ref="ni_patient.ni_patient_view_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="before">
                <field name="type_id" widget="radio" />
            </field>
            <xpath expr="//page[@name='private']" position="before">
                <page name="problem" string="สภาพปัญหา" icon="fa-exclamation-triangle">
                    <field name="problem" />
                </page>
                <page name="plan" string="แนวทางในการให้ความช่วยเหลือดูแล" icon="fa-bullseye">
                    <field name="plan" />
                </page>
            </xpath>
            <field name="father_name" position="before">
                <field name="family_count" />
                <field name="family_relation" />
            </field>
        </field>
    </record>
    <record id="ni_patient_view_form_simp" model="ir.ui.view">
        <field name="name">ni.patient.view.form.simp</field>
        <field name="model">ni.patient</field>
        <field name="priority" eval="30" />
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title mb24">
                        <label for="identifier" />
                        s
                        <h1>
                            <field name="identifier" placeholder="e.g. X-XXXX-XXXXX-XX-X" />
                        </h1>
                        <group>
                            <label for="name" />
                            <div class="o_row">
                                <field name="title" />
                                <field name="name" />
                            </div>
                            <field name="type_id" widget="radio" />
                        </group>
                        <group>
                            <group string="ข้อมูลส่วนบุคคล">
                                <field name="birthdate" />
                                <label for="age" />
                                <div class="o_row">
                                    <field name="age" />
                                    <span class="mx-2">Years</span>
                                    <field
                                        name="age_range_id"
                                        attrs="{'readonly': ['|', ('birthdate', '!=', False), ('age', '!=', 0)]}"
                                    />
                                </div>
                                <field name="age" />
                                <field name="nationality_id" />
                                <field name="function" />
                            </group>
                            <group string="การติดต่อ">
                                <field name="mobile" />
                                <field name="line" />
                            </group>
                            <group string="ที่อยู่">
                                <label name="address_name" for="street" string="Address" />
                                <div class="o_address_format">
                                    <field name="street" class="o_address_street" placeholder="Street..." />
                                    <field name="street2" class="o_address_street" placeholder="Street 2..." />
                                    <field name="city" class="o_address_city" placeholder="City" />
                                    <field
                                        name="state_id"
                                        class="o_address_state"
                                        context="{'country_id': country_id, 'zip': zip}"
                                        options='{"no_open": True}'
                                        placeholder="State"
                                    />
                                    <field name="zip" class="o_address_zip" placeholder="ZIP" />
                                    <field
                                        name="country_id"
                                        class="o_address_country"
                                        options='{"no_open": True, "no_create": True}'
                                        placeholder="Country"
                                    />
                                </div>
                            </group>
                            <group string="ครอบครัว">
                                <label for="family_count" />
                                <div class="o_row">
                                    <field name="family_count" />
                                    <span>คน</span>
                                </div>
                                <field name="family_relation" />
                            </group>
                            <group string="สภาพปัญหา">
                                <field name="problem_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                                <field name="problem" />
                            </group>
                            <group string="แนวทางในการให้ความช่วยเหลือดูแล">
                                <field
                                    name="plan_service_ids"
                                    domain="[('target_type_ids', '=', type_id)]"
                                    widget="many2many_tags"
                                />
                                <field name="plan" />
                            </group>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ni_patient_action" model="ir.actions.act_window">
        <field name="name">ผู้สูงอายุ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ni.patient</field>
        <field name="view_mode">tree,form</field>
        <field
            name="view_ids"
            eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('ni_patient.ni_patient_view_tree')}),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('ni_patient.ni_patient_view_kanban')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('ni_patient_view_form_simp')}),
                          ]"
        />
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">ไม่พบผู้สูงอายุ</p>
            <p>

            </p>
        </field>
    </record>
</odoo>
